#!/bin/sh

for type in rsa dsa; do {
  # check for keys
  key=/etc/ssh/ssh_host_${type}_key
  [ ! -f $key ] && {
    # generate missing keys
    [ -x /usr/bin/ssh-keygen ] && {
      /usr/bin/ssh-keygen -N '' -t $type -f $key 2>&- >&- && exec $0 $*
    } &
    exit 0
  }
}; done
mkdir -p /var/empty
/usr/sbin/sshd
